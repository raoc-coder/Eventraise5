# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://supabase-indigo-lamp.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Braintree Configuration (Sandbox)
BRAINTREE_MERCHANT_ID=your_braintree_merchant_id
BRAINTREE_PUBLIC_KEY=your_braintree_public_key
BRAINTREE_PRIVATE_KEY=your_braintree_private_key

# PayPal Configuration
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENVIRONMENT=sandbox

# PayPal World Configuration
# PayPal supports multiple currencies including INR for Indian users
# No additional configuration needed - same PayPal credentials work for both USD and INR

# SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@eventraisehub.com
SENDGRID_RECEIPT_TEMPLATE_ID=your_receipt_template_id
SENDGRID_CONFIRMATION_TEMPLATE_ID=your_confirmation_template_id

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production, set this to your Vercel domain: https://your-app.vercel.app
NEXT_PUBLIC_APP_VERSION=1.0.0

# Observability Configuration
# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Meta Pixel (Facebook Pixel)
NEXT_PUBLIC_META_PIXEL_ID=your_meta_pixel_id

# Monitoring & Alerts
MONITORING_EMAIL=admin@yourdomain.com
ALERT_WEBHOOK_URL=your_slack_or_discord_webhook_url
